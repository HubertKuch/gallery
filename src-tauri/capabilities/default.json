{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "sql:allow-execute",
    "sql:allow-select",
    "core:window:allow-close",
    "dialog:default",
    "fs:allow-read-dir",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:allow-mkdir",
    "fs:allow-copy-file",
    "fs:allow-remove",
    "fs:allow-rename",
    {
      "identifier": "fs:scope",
      "allow": ["**/*"]
    }
  ]
}